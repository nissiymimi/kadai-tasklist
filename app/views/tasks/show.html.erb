<h1>id: <%= @task.id %> のメッセージ詳細ページ</h1>

<div class="table-responsive">
<table class="table table-striped">
<tr>
    <th class="col-md-2">ID</th>
    <td> <%= @task.id %></td>
</tr>
<tr>
    <th>ステータス</th>
    <td><%= @task.status %></th>
</tr>
   
<tr>
    <th>内容</th>
    <td><%= @task.content %></th>
</tr>


</table>
</div>


<%= link_to 'このメッセージを編集する', edit_task_path(@task), class: "btn btn-info" %>
<%= link_to 'このメッセージを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' } , class: "btn btn-danger" %>